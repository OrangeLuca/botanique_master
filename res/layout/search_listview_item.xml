<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true" >
    
    <ImageView 
        android:id="@+id/search_list_item_image"
        android:layout_width="80dip"
        android:layout_height="60dip"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_marginLeft="2dip"
        android:layout_alignParentLeft="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/lizhi"
        > 
        
    </ImageView>
    
    <ImageView 
		android:id="@+id/search_list_item_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_centerVertical="true"
        android:src="@drawable/locate_mark_item"
        android:layout_marginRight="2dip"
        android:layout_gravity="left|center_vertical"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" >
        
    </ImageView>
  
    
    <TextView 
        android:id="@+id/search_list_item_title"
        android:layout_toRightOf="@id/search_list_item_image"
        android:layout_toLeftOf="@id/search_list_item_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:text="荔枝"
        android:textSize="10pt"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" >
        
    </TextView>
    
    "
    

</RelativeLayout>
