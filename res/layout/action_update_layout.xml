<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <SurfaceView
        android:id="@+id/update_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:alpha="0.8" >
    </SurfaceView>

    <LinearLayout
        android:id="@+id/update_llcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:alpha="0.8"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/update_checkprobar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip" />

        <TextView
            android:id="@+id/update_checktext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:text="正在检查更新，请稍后..."
            android:textColor="#000000"
            android:textSize="10pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/update_llhasnew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:alpha="0.8"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/update_hastext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:text="有新版本  V1.0.1 可以更新"
            android:textColor="#000000"
            android:textSize="10pt" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:alpha="0.8"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/update_downloadbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dip"
                android:layout_weight="1"
                android:background="#33CC33"
                android:gravity="center"
                android:paddingBottom="5dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="5dip"
                android:text="立即下载"
                android:textColor="#FFFFFF"
                android:textSize="10pt" />

            <Button
                android:id="@+id/update_downloadcancelbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dip"
                android:layout_weight="1"
                android:background="#FF0000"
                android:gravity="center"
                android:paddingBottom="5dip"
                android:paddingLeft="25dip"
                android:paddingRight="25dip"
                android:paddingTop="5dip"
                android:text="返 回"
                android:textColor="#FFFFFF"
                android:textSize="10pt" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/update_llnonew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:alpha="0.8"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/update_nonewtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:text="当前是最新版本！"
            android:textColor="#000000"
            android:textSize="10pt" />

        <Button
            android:id="@+id/update_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dip"
            android:background="#33CC33"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingLeft="25dip"
            android:paddingRight="25dip"
            android:paddingTop="5dip"
            android:text="返回"
            android:textColor="#FFFFFF"
            android:textSize="10pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/update_lldownloadnew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:alpha="0.8"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/update_downloadnewtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:text="正在下载(50%)"
            android:textColor="#000000"
            android:textSize="10pt" />

        <ProgressBar
            android:id="@+id/update_downloadnewprobar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="260dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip" />

        <Button
            android:id="@+id/update_cancelbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dip"
            android:background="#FF0000"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingLeft="25dip"
            android:paddingRight="25dip"
            android:paddingTop="5dip"
            android:text="取消下载"
            android:textColor="#FFFFFF"
            android:textSize="10pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/update_llfinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:alpha="0.8"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/update_finishtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:text="完成下载，请手动安装！"
            android:textColor="#000000"
            android:textSize="10pt" />

        <Button
            android:id="@+id/update_finishbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dip"
            android:background="#33CC33"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingLeft="25dip"
            android:paddingRight="25dip"
            android:paddingTop="5dip"
            android:text="完 成"
            android:textColor="#FFFFFF"
            android:textSize="10pt" />
    </LinearLayout>

</RelativeLayout>