<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/map_route_popwindow_shape"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
   <!--   android:textColor="@color/color_map_route_text" -->
   
   <LinearLayout 
       android:id="@+id/layout_mappop_title"
       android:background="#33CC33"
       android:layout_alignParentTop="true"
       android:layout_height="40dip"
       android:layout_width="match_parent">
       
    <TextView 
        android:id="@+id/map_route_poptitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="步行方案"
        android:textColor="#FFFFFF"
        android:textSize="13pt"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dip"
        android:layout_gravity="center_vertical"
        android:layout_weight="5" >
     </TextView>
    
     <ImageView 
        android:id="@+id/map_route_popbtn" 
        android:layout_height="match_parent" 
        android:layout_width="wrap_content"
        android:src="@drawable/cancel_btn_bg"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center_vertical"  >
    </ImageView>

    </LinearLayout>
    
    <ListView 
        android:id="@+id/map_route_poplist"
        android:layout_below="@id/layout_mappop_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:cacheColorHint="#00000000"
        android:background="#FFFFFF"
        android:fadingEdge="none"
        android:listSelector="#33CC33"
        android:dividerHeight="0dp"
        android:divider="#33CC33"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="true">      
    </ListView>
    
</RelativeLayout>
