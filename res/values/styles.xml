    <style name="BotaniqueBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/BotaniqueActionBar</item>
        <item name="android:itemBackground">@color/color_tool_background</item>
        <item name="android:itemTextAppearance">@style/BotaniqueActionBarOverflow</item>
        <item name="android:actionOverflowButtonStyle">@style/BotaniqueActionBarOverflow</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
